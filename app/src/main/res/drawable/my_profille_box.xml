<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- হালকা gradient রঙ -->
    <gradient
        android:startColor="#F8FBFF"
        android:endColor="#E3F2FD"
        android:angle="90"/>

    <!-- গোলাকার কোণা -->
    <corners android:radius="12dp" />

    <!-- হালকা border -->
    <stroke
        android:width="1.5dp"
        android:color="#90CAF9" />

    <!-- ভিতরে padding -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="5dp"
        android:bottom="5dp" />

</shape>