<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit_profile"
    android:orientation="vertical"
    android:gravity="top|center_horizontal"
    android:background="#F8F8F8"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:gravity="center"
        android:textSize="25sp"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:background="#954779A4"

        />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/profile"
        android:layout_marginTop="30dp"

        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"

        android:layout_marginLeft="5dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >



            <EditText
                android:id="@+id/ed_name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Name"
                android:inputType="textPersonName"
                android:paddingLeft="70dp"
                android:background="@drawable/my_profille_box"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                />

            <EditText
                android:id="@+id/ed_mobile"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Mobile"
                android:inputType="textPersonName"
                android:paddingLeft="70dp"
                android:background="@drawable/my_profille_box"
                android:layout_marginTop="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                />

            <EditText
                android:id="@+id/ed_mail"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="mail"
                android:inputType="textPersonName"
                android:paddingLeft="70dp"
                android:background="@drawable/my_profille_box"
                android:layout_marginTop="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                />

            <EditText
                android:id="@+id/edit_address"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Pick-up Address"
                android:inputType="textPersonName"
                android:paddingLeft="50dp"
                android:background="@drawable/my_profille_box"
                android:layout_marginTop="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                />

            <Button
                android:id="@+id/button_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_marginTop="24dp"
                android:backgroundTint="#2E86C1"
                android:textSize="23sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:cornerRadius="13dp"
                />
        </LinearLayout>







        <!-- Bottom black bar -->
        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"

            android:layout_alignParentBottom="true"
            >


            <ImageView
                android:id="@+id/home_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/home"
                android:scaleType="centerInside"
                android:contentDescription="Icon 1" />

            <ImageView
                android:id="@+id/edit_lenden"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/transction"
                android:scaleType="centerInside"
                android:contentDescription="Icon 2" />

            <ImageView
                android:id="@+id/cart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/cart"
                android:scaleType="centerInside"
                android:contentDescription="Icon 3" />

            <ImageView
                android:id="@+id/profile"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/profile_bottom"
                android:scaleType="centerInside"
                android:contentDescription="Icon 4"
                android:layout_marginTop="8dp"
                />


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>